@model UsuarioViewModel

@{
    ViewData["Title"] = "Crear Usuario";
}


@section Style {

    <link href="~/css/AggBeneficiario.css" rel="stylesheet" />
    <link href="~/css/toggle.css" rel="stylesheet" />
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header pb-0">
        <div class="container-fluid">
            <div class="row mt-5">
                <div class="col-sm-6">
                    <ul id="List"> <li class="heading" style="list-style: none; font-size: 25px" id="IconList"> Crear usuario</li></ul>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Configuración</a></li>
                        <li class="breadcrumb-item active">Crear usuario</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 p-2">
                <div class="card mt-0 mb-3 p-5 mx-auto" style="width: 700px">
                    <div class="col-sm-12">
                        <div class="">
                            <h4 class="text-left">
                                <b id="Tite">
                                    Crear usuario
                                </b>
                            </h4>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <hr />
                    </div>
                    <form asp-action="CrearUsuario" asp-controller="Configuracion" method="post">
                        <div asp-validation-summary="All" class="text-danger small"></div>
                        <input type="hidden" id="succeeded" value="@ViewBag.Succeeded" />
                        <div class="d-flex justify-content-between">
                            <div class="form-group">
                                <div class="input-group mt-0">
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre y apellido" />
                                    <div class="input-group-append">
                                        <div class="input-group-text" style="border: 1px solid red">
                                            <span class="fas fa-user"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                                    <div class="input-group-append">
                                        <div class="input-group-text" style="border: 1px solid red">
                                            <span class="fas fa-envelope"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Contraseña" />
                                    <div class="input-group-append">
                                        <div class="input-group-text" style="border: 1px solid red">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="password" asp-for="ConfirmarPassword" class="form-control" placeholder="Confirmar Contraseña" />
                                    <div class="input-group-append">
                                        <div class="input-group-text" style="border: 1px solid red">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <label class="control-label">Estado (Activo e Inactivo)</label>
                                <div class="form-check p-0">
                                    <label class="switch">
                                        <input asp-for="CambiarEstado" type="checkbox" name="cambiarEstado" id="cambiarEstado">
                                        @Html.DisplayNameFor(m => m.CambiarEstado)
                                        <span class="slider round"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row d-flex justify-content-end col-sm-12">
                            <div class="col-sm-12 d-flex justify-content-end">
                                <input type="submit" value="Guardar" class="btn btn-success" style="margin-right: 10px" />
                                <a asp-controller="Configuracion" asp-action="Index" class="btn btn-danger">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.content-wrapper -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>

    let succeeded = document.getElementById('succeeded').value;
    if (succeeded == 200) {
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Configuracion")';
        }, 1300);
        alertify.success('Guardado');
    }

</script>

}