@{
    Layout = null;

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Confirmado</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/adminlte/dist/css/Style.css">
    <!-- Google Font: lobster -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">

    <link rel="shortcut icon" href="~/lib/adminlte/img/Avansist_Logo.png" />
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="container tarjeta" style="height: auto">
        <img class="avatar" src="~/lib/adminlte/img/Avansist_Logo.png" alt="logo">
        <h1>¡Correo confirmado!</h1>
        <p>
            Gracias por confirmar su correo electrónico, ahora puede acceder al aplicativo.
            <br />
            <br />
            <div class="d-flex justify-content-center">
                <span class="font-avansist" style="font-size: 30px">Team Avansist</span>
            </div>
        </p>
        <div class="d-flex justify-content-center">
            <a asp-controller="Acceso" asp-action="Login" class="btn btn-success">Ingresar</a>
        </div>
    </div>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
