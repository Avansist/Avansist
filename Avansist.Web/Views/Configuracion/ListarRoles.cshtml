@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

@section Style{
    <style>
        .disabled {
            cursor: not-allowed;
            pointer-events: none;
        }
    </style>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header pb-0">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="mt-5">Gestión de roles</h1>
                </div><!-- /.col -->
                <div class="col-sm-6 mt-5">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="">Inicio</a></li>
                        <li class="breadcrumb-item active">Usuarios</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <hr />
                <p>
                    <a class="btn btn-outline-success" asp-action="CrearRol"><i class="far fa-plus-square"></i> Crear rol</a>
                </p>
                
                <table class="table table-striped table-bordered mx-auto" id="tabla">
                    <thead style="background-color: rgb(175,219,110,0.4)">
                        <tr>
                            <th>
                                Nombre Rol
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rol in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => rol.Name)
                                </td>
                                <td>
                                    <form id="frm-eliminar" asp-action="EliminarRol" asp-route-id="@rol.Id" method="post">                                        
                                        <a class="btn btn-secondary" asp-action="EditarRol" asp-route-id="@rol.Id"><i class="fas fa-user-edit"></i></a> |
                                        <button type="button" class="btn btn-danger" onclick="EliminarRol()"><i class="far fa-trash-alt"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-wrapper -->


@section Scripts{
    <script>              

        function EliminarRol() {
            Swal.fire({
                text: '¿Desea eliminar el rol?',
                icon: 'error',
                confirmButtonColor: '#afdb6e',
                showDenyButton: true,
                showCancelButton: false,
                confirmButtonText: 'Aceptar',
                denyButtonText: 'Cancelar',
            }).then((result) => {
                if (result.isConfirmed) {
                    if (result.isConfirmed) {
                        document.getElementById('frm-eliminar').submit();
                    }
                } else if (result.isDenied) {

                }
            })
        }        

    </script>
}
