@model Avansist.Services.DTOs.AgendaBeneficiarioDto

@{
    ViewData["Title"] = "CreateAB";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header pb-0">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="mt-5">Crear Agenda Beneficiario</h1>
                </div><!-- /.col -->
                <div class="col-sm-6 mt-5">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="">Inicio</a></li>
                        <li class="breadcrumb-item active">Preinscripción</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-5">
                <hr />
                <form asp-action="CreateAB">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NombreEvento" class="control-label"></label>
                        <input asp-for="NombreEvento" class="form-control" />
                        <span asp-validation-for="NombreEvento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmpleadoEncargado" class="control-label"></label>
                        <input asp-for="EmpleadoEncargado" class="form-control" />
                        <span asp-validation-for="EmpleadoEncargado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumeroDocumento" class="control-label"></label>
                        <input asp-for="NumeroDocumento" class="form-control" />
                        <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaInicioEvento" class="control-label"></label>
                        <input asp-for="FechaInicioEvento" class="form-control" />
                        <span asp-validation-for="FechaInicioEvento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaFinEvento" class="control-label"></label>
                        <input asp-for="FechaFinEvento" class="form-control" />
                        <span asp-validation-for="FechaFinEvento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PreinscripcionId" class="control-label"></label>
                        <input asp-for="PreinscripcionId" type="number" value="@ViewBag.Nombre" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <!-- /.card -->
</div>
<!-- /.row -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}