                            <span asp-validation-for="Edad" class="text-danger"></span>
                        </div>

                        <div class="form-group" style="display: none">
                            <label asp-for="GeneroId" class="control-label"></label>
                            <select asp-for="GeneroId" class="form-control" asp-items="ViewBag.listaGeneros">
                                <option>Seleccione</option>
                            </select>
                        </div>
                        <div class="form-group" style="display: none">
                            <label asp-for="GrupoSanguineoId" class="control-label"></label>
                            <select asp-for="GrupoSanguineoId" class="form-control" asp-items="ViewBag.listaGrupoSanguineos">
                                <option>Seleccione</option>
                            </select>
                        </div>
                        <div class="form-group" style="display: none">
                            <label asp-for="FechaNacimiento" class="control-label"></label>
                            <input asp-for="FechaNacimiento" class="form-control" />
