                        </div>
                        <div class="form-group" style="display: none">
                            <label asp-for="NombreEps" class="control-label"></label>
                            <input asp-for="NombreEps" class="form-control" />
                            <span asp-validation-for="NombreEps" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display: none">
                            <label asp-for="GrupoSisben" class="control-label"></label>
                            <input asp-for="GrupoSisben" class="form-control" />
                            <span asp-validation-for="GrupoSisben" class="text-danger"></span>
