@model IEnumerable<Avansist.Services.DTOs.ControlAsistenciaResumenDto>

@{
    ViewData["Title"] = "Index";
}

@section Style{

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header pb-0">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="mt-5">Control Asistencia</h1>
                </div><!-- /.col -->
                <div class="col-sm-6 mt-5">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="">Inicio</a></li>
                        <li class="breadcrumb-item active">Control Asistencia</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <hr />
                <p>
                    <a class="btn btn-outline-success" asp-action="Create"><i class="far fa-plus-square"></i> Crear Ingreso Beneficiario</a>
                </p>
                <table class="table table-striped table-bordered" style="width:100%" id="tabla">
                    <thead style="background-color: rgb(175,219,110,0.4)">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreBeneficiario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ApellidoBeneficiario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaIngreso)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AutorizacionSalida)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaSalida)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreBeneficiario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApellidoBeneficiario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaIngreso)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AutorizacionSalida)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaSalida)
                            </td>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ControlAsistenciaId"><i class="fas fa-running"></i></a>
                                <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.ControlAsistenciaId"><i class="far fa-eye"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-wrapper -->

@section Scripts{

}
