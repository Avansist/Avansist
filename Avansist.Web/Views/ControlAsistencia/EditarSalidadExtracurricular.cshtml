@model Avansist.Models.Entities.SalidaExtracurricular

@{
    ViewData["Title"] = "Edit";
}

@section Style{
    <link href="~/css/toggle.css" rel="stylesheet" />

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header pb-0">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="mt-5">Editar salida extracurricular</h1>
                </div><!-- /.col -->
                <div class="col-sm-6 mt-5">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="">Inicio</a></li>
                        <li class="breadcrumb-item active">salida extracurricular</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 mx-auto p-2">
                <div class="card mt-0 mb-3 p-4">
                    <div class="col-sm-12">

                       
                        <form asp-action="EditarSalidadExtracurricular" id="EditarSalidadExtracurricular" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="SalidaExtracurricularId" id="SalidaExtracurricularId" />
                            <div class="d-flex justify-content-between mb-4">
                                <div class="form-group col-sm-4">
                                    <label class="control-label">Nombre del evento</label>
                                    <input asp-for="NombreSalidadEvento" id="NombreSalidadEvento" class="form-control" />
                                    <span asp-validation-for="NombreSalidadEvento" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label asp-for="Direccion" class="control-label"></label>
                                    <input asp-for="Direccion" id="Direccion" class="form-control" />
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label class="control-label">Responsable</label>
                                    <input asp-for="ResponsableEvento" id="ResponsableEvento" class="form-control" />
                                    <span asp-validation-for="ResponsableEvento" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="d-flex justify-content-between mb-4">
                                <div class="form-group col-sm-4">
                                    <label class="control-label">Documento</label>
                                    <input asp-for="DocumentoResponsable" id="DocumentoResponsable" class="form-control" />
                                    <span asp-validation-for="DocumentoResponsable" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label asp-for="FechaSalidadEvento" class="control-label"></label>
                                    <input asp-for="FechaSalidadEvento" id="FechaSalidadEvento" class="form-control" />
                                    <span asp-validation-for="FechaSalidadEvento" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label asp-for="FechaRegresoEvento" class="control-label"></label>
                                    <input asp-for="FechaRegresoEvento" id="FechaRegresoEvento" class="form-control" />
                                    <span asp-validation-for="FechaRegresoEvento" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center mb-4 col-sm-12">
                                <div class="col-sm-4">
                                    <label asp-for="EstadoEvento" class="control-label"></label>
                                    <div class="form-check p-0">
                                        <label class="switch">
                                            <input asp-for="EstadoEvento" id="EstadoEvento" type="checkbox">

                                            <span class="slider round"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                            
                            

                            

                            <div class="d-flex justify-content-center mb-4">
                                <div class="col-sm-8">
                                    
                                    <div class="d-flex justify-content-around m-0">
                                        <div class="form-group col-sm-6 m-0">
                                            <a type="button" asp-action="IndexSalidadExtracurricular" class="btn btn-danger float-right">Cancelar</a>
                                        </div>

                                        <div class="form-group col-sm-6 m-0">
                                            <input type="button" value="Guardar" id="btn-guardar" class="btn btn-success float-right" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>
    <!-- /.card -->
</div>
<!-- /.row -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



<script>
        document.addEventListener('DOMContentLoaded', function () {
            $('#EditarSalidadExtracurricular').validate();
        })
    document.getElementById("btn-guardar").addEventListener("click", function (event) {
        if (!$("#EditarSalidadExtracurricular").valid()) {
            $("label.error").css("color", "red");
            $("label.error").css("font-weight", "300");


            event.preventDefault();
        } else {

            Swal.fire({
                    text: '¿Desea guardar la salida?',
                    icon: 'question',
                    confirmButtonColor: '#afdb6e',
                    showDenyButton: true,
                    showCancelButton: false,
                    confirmButtonText: 'Guardar',
                    denyButtonText: 'Cancelar',
                }).then((result) => {
                    if (result.isConfirmed) {
                        let formData = new FormData();
                        
                        formData.append("SalidaExtracurricularId", document.getElementById("SalidaExtracurricularId").value);
                        formData.append("NombreSalidadEvento", document.getElementById("NombreSalidadEvento").value);
                        formData.append("Direccion", document.getElementById("Direccion").value);
                        formData.append("ResponsableEvento", document.getElementById("ResponsableEvento").value);
                        formData.append("DocumentoResponsable", document.getElementById("DocumentoResponsable").value);
                        formData.append("FechaSalidadEvento", document.getElementById("FechaSalidadEvento").value);
                        formData.append("FechaRegresoEvento", document.getElementById("FechaRegresoEvento").value);
                        formData.append("EstadoEvento", document.getElementById("EstadoEvento").value);

                        $.ajax({
                            url: '@Url.Action("EditarSalidadExtracurricular", "ControlAsistencia")',
                            type: 'post',
                            processData: false,
                            contentType: false,
                            data: formData,
                            dataType: 'json',
                            success: function (result) {
                                if (result.status == true) {
                                    setTimeout(function () {
                                        window.location.href = '@Url.Action("IndexSalidadExtracurricular", "ControlAsistencia")';
                                    }, 1000);
                                    alertify.success('Guardado');
                                } else {
                                    alertify.error('No se pudo guardar');
                                }
                            },
                            error: function (err) {
                                console.log(err.data);
                            }
                        });
                    } else if (result.isDenied) {
                        alertify.error('Cancelado');
                    }
                })
        }
    })

</script>
}
