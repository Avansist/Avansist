                                <div class="form-group col-sm-4">
                                    <label asp-for="Direccion" class="control-label"></label>
                                    <input asp-for="Direccion" class="form-control" id="DireccionE" />
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label class="control-label">Responsable</label>
                                    <input asp-for="ResponsableEvento" class="form-control" id="ResponsableE" />
                                    <span asp-validation-for="ResponsableEvento" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="d-flex justify-content-between mb-4">
                                <div class="form-group col-sm-4">
                                    <label class="control-label">Documento</label>
                                    <input asp-for="DocumentoResponsable" class="form-control" id="DocumentoResponsableE" />
                                    <span asp-validation-for="DocumentoResponsable" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label asp-for="FechaSalidadEvento" class="control-label">Fecha salida evento</label>
                                    <input asp-for="FechaSalidadEvento" class="form-control" id="FechaSalidadE" />
                                    <span asp-validation-for="FechaSalidadEvento" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label asp-for="FechaRegresoEvento" class="control-label">Fecha regreso evento</label>
                                    <input asp-for="FechaRegresoEvento" class="form-control" id="FechaRegresoE" />
                                    <span asp-validation-for="FechaRegresoEvento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group form-check col-sm-4 ">
                                <label asp-for="EstadoEvento" class="form-check-label">
                                    <input asp-for="EstadoEvento" class="form-check-input" id="EstadoE" />
                                    @Html.DisplayNameFor(model => model.EstadoEvento)
                                </label>
                            </div>
                            <div class="">
                                <hr />
                            </div>
                            <div class="col-sm-12 d-flex justify-content-around mb-4" >
                                <div class="col-sm-6">
                                    <div class="form-group" style="display:none">
                                        <label asp-for="PreinscripcionId" class="control-label"></label>
                                        <select asp-for="PreinscripcionId" class="form-control" asp-items="ViewBag.listaBeneficiarios">
                                            <option value="1">N/A</option>
                                        </select>
                                    </div>
                                    @*
        <div class=" mb-4">
            <button onclick="Agregar()" class="btn btn-primary " type="button">Agregar</button>
        </div>
                                    *@
                                </div>

                                <div class="col-sm-6">
                                    <div class="">
                                        <table id="Tabla" class="table table-bordered" style="display:none">
                                            <thead>
                                                <tr>
                                                    <th>codigo del niño</th>
                                                    <th>nombre del nino</th>
                                                    <th>acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                        <div class="d-flex justify-content-around mb-4">
                                            <button type="submit" class="btn btn-success mt-2" id="btn-guardar">Guardar</button>
                                            <button type="button" class="btn btn-danger mt-2" id="btn-cancelar">Cancelar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <!-- /.card -->
</div>
<!-- /.row -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
        /*--------------------------------- BOTON CANCELAR ---------------------------*/

        document.getElementById("btn-cancelar").addEventListener("click", function (event) {

              Swal.fire({
                  text: 'Perdera todos los cambios ¿Desea continuar?',
                  icon: 'error',
                  confirmButtonColor: '#afdb6e',
                  showDenyButton: true,
                  showCancelButton: false,
                  confirmButtonText: 'Si',
                  denyButtonText: 'No',
              }).then((result) => {
                  if (result.isConfirmed) {

                      window.location.href = '@Url.Action("IndexSalidadExtracurricular", "ControlAsistencia")';

                  } else if (result.isDenied) {

                  }
              })
        });


        var contador = 0;
        function Agregar() {
            let rowCount = $('#Tabla tr').length;

            let Beneficiario = $("#PreinscripcionId option:selected");
            $("#Tabla tbody").append(`
                        <tr id="${rowCount + 1}">
                            <td>
                                <input type="hidden" name="Preinscripcion[${contador}].PreinscripcionId" class="form-control" />
                                ${Beneficiario.val()}
                            </td>
                            <td>${Beneficiario.text()}</td>
                            <td>
                                <button  class="btn btn-danger" onclick="EliminarRegistro(${rowCount + 1})">Eliminar</button>
                            </td>
                        </tr>
                    `);
            contador++;

        }
        // funcion para eliminar el registro de la tabla
        function EliminarRegistro(id) {
            $(`#${id}`).remove();
        }


        document.getElementById("btn-guardar").addEventListener("click", function (event) {

            // Validacion y metodo Guaradar

            if (!$("#form-final").valid()) {
                $("label.error").css("color", "red");
                $("label.error").css("font-weight", "300");

                event.preventDefault();

            } else {
                Swal.fire({
                    text: '¿Desea guardar el registro?',
                    icon: 'question',
                    confirmButtonColor: '#afdb6e',
                    showDenyButton: true,
                    showCancelButton: false,
                    confirmButtonText: 'Guardar',
                    denyButtonText: 'Cancelar',
                }).then((result) => {
                    if (result.isConfirmed) {
                        var imagen = $("#imagen").prop("files");
                        let formData = new FormData();

                        formData.append("NombreSalidadEvento", document.getElementById("NombreSalidadE").value);
                        formData.append("Direccion", document.getElementById("DireccionE").value);
                        formData.append("ResponsableEvento", document.getElementById("ResponsableE").value);
                        formData.append("DocumentoResponsable", document.getElementById("DocumentoResponsableE").value);
                        formData.append("FechaSalidadEvento", document.getElementById("FechaSalidadE").value);
                        formData.append("FechaRegresoEvento", document.getElementById("FechaRegresoE").value);
                        formData.append("EstadoEvento", document.getElementById("EstadoE").value);
                        formData.append("PreinscripcionId", document.getElementById("PreinscripcionIdE").value);


                        $.ajax({
                            url: '@Url.Action("CreateSalidadExtracurricular", "ControlAsistencia")',
                            type: 'post',
                            processData: false,
                            contentType: false,
                            data: formData,
                            dataType: 'json',
                            success: function (result) {
                                if (result.status == true) {
                                    setTimeout(function () {
                                        window.location.href = '@Url.Action("IndexSalidadExtracurricular", "ControlAsistencia")';
                                    }, 1000);
                                    alertify.success('Guardado');
                                } else if (result.status == 500) {

                                    $("#alerta-beneficiario").show();

                                } else {
                                    alertify.error('No se pudo guardar');
                                }
                            },
                            error: function (err) {
                                console.log(err.data);
                            }
                        });
                    } else if (result.isDenied) {
                        alertify.error('Cancelado');
                    }
                })
            }
        })

</script>
}


