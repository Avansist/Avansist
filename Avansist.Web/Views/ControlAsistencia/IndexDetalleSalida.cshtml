@model IEnumerable<Avansist.Services.DTOs.DetalleDto>

@{
    ViewData["Title"] = "Index";
}

@section Style{

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header pb-0">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="mt-5">Detalle de la salida</h1>
                </div><!-- /.col -->
                <div class="col-sm-6 mt-5">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="">Inicio</a></li>
                        <li class="breadcrumb-item active">Detalle Salida</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <hr />

                <table class="table table-striped table-bordered" style="width:100%" id="tabla">
                    <thead style="background-color: rgb(175,219,110,0.4)">
                        <tr>

                            
                            <th>
                                @Html.DisplayNameFor(model => model.NombreBeneficiario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AutorizacionSalidaExtracurricular)
                            </th>




                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreBeneficiario)
                                </td>
                                <td>
                                    @Html.Raw(item.AutorizacionSalidaExtracurricular ? "Activo" : "Inactivo")
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-action="CambiarEstado" asp-route-id="@item.DetalleId">@Html.Raw(item.AutorizacionSalidaExtracurricular ? "Inactivar" : "Activar")</a>
                                </td>
                            </tr>

                        }
                    </tbody>

                </table>
                <a type="button" asp-action="IndexSalidadExtracurricular" class="btn btn-secondary">Atras</a>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-wrapper -->

@section Scripts{

}