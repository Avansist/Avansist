@model IEnumerable<Avansist.Services.DTOs.SalidadExtracurricularDto>

@{
    ViewData["Title"] = "Index";
}

@section Style{

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header pb-0">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="mt-5">Salidad extracurricular</h1>
                </div><!-- /.col -->
                <div class="col-sm-6 mt-5">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="">Inicio</a></li>
                        <li class="breadcrumb-item active">Salidad extracurricular</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <hr />
                <p>
                    <a class="btn btn-outline-success" asp-action="CreateSalidadextracurricular"><i class="far fa-plus-square"></i> Crear salida extracurricular</a>
                </p>
                
                <table class="table table-striped table-bordered" style="width:100%" id="tabla">
                    <thead style="background-color: rgb(175,219,110,0.4)">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreSalidadEvento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Direccion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ResponsableEvento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaSalidadEvento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaRegresoEvento)
                            </th>

                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreSalidadEvento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Direccion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ResponsableEvento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaSalidadEvento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaRegresoEvento)
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-action="EditarSalidadExtracurricular" asp-route-id="@item.SalidaExtracurricularId"><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-outline-success" asp-action="IndexDetalleSalida" asp-route-id="@item.SalidaExtracurricularId"><i class="far fa-list-alt"></i></a>
                                
                                </td>
                            </tr>
                         
                            }
                    </tbody>
                </table>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-wrapper -->

@section Scripts{

}