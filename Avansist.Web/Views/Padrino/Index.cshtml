@model IEnumerable<Avansist.Services.DTOs.PadrinoResumenDto>

@{
    ViewData["Title"] = "Index";
}

@section Style{

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header pb-0">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="mt-5">Padrino</h1>
                </div><!-- /.col -->
                <div class="col-sm-6 mt-5">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="">Inicio</a></li>
                        <li class="breadcrumb-item active">Padrino</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <hr />
                <p>
                    <a class="btn btn-outline-success" asp-action="Create"><i class="far fa-plus-square"></i> Crear Nuevo Padrino</a>
                </p>
                <table class="table table-striped table-bordered" style="width:100%" id="tabla">
                    <thead style="background-color: rgb(175,219,110,0.4)">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreTipoDocumento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumeroDocumento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NombrePadrino)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ApellidoPadrino)
                            </th>                            
                            <th>
                                @Html.DisplayNameFor(model => model.Ocupacion)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreTipoDocumento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroDocumento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombrePadrino)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ApellidoPadrino)
                                </td>                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ocupacion)
                                </td>
                                <td>
                                    <a data-bs-toggle="tooltip" title="Editar" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.PadrinoId"><i class="far fa-edit"></i></a>
                                    <a data-bs-toggle="tooltip" title="Ver" class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.PadrinoId"><i class="far fa-eye"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-wrapper -->

@section Scripts{

}
