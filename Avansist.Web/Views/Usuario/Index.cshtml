@model IEnumerable<Avansist.Web.ViewModel.UsuarioViewModel>

@{
    ViewData["Title"] = "Index";
}

@section Style{

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header pb-0">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="mt-5">Gestión de usuarios</h1>
                </div><!-- /.col -->
                <div class="col-sm-6 mt-5">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="">Inicio</a></li>
                        <li class="breadcrumb-item active">Usuarios</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <hr />
                <p>
                    <a class="btn btn-outline-success" asp-action="#"><i class="far fa-plus-square"></i> Crear usuario</a>
                </p>
                <table class="table table-striped table-bordered" style="width:100%" id="tabla">
                    <thead style="background-color: rgb(175,219,110,0.4)">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CambiarEstado)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CambiarEstado)
                                </td>
                                <td>
                                    @*<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.PreinscripcionId"><i class="far fa-edit"></i></a>
                                        <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.PreinscripcionId"><i class="far fa-eye"></i></a>
                                        <a class="btn btn-outline-success" asp-action="CreateAB" asp-route-id="@item.PreinscripcionId"><i class="fas fa-calendar-alt"></i></a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-wrapper -->


@section Scripts{

}
